<%- include('partials/header') %>
  <h1 id="register">Register</h1>


  <div class="container mt-5 center container1">

    <div class="col-lg-5 col-md-8">

      <div class="card" id="form-card">
        <div id="avatar">
          <img src="https://cdn-icons-png.flaticon.com/512/295/295128.png" alt="img">
        </div>
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <input type="email" class="form-control" name="username" placeholder="Enter your email">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Enter your password">
            </div>
            <% if(failedRegAttempt){ %>
              <p style="color:red">User with same email exists, please try with another name</p>
              <%}%>
                <button type="submit" class="btn btn-dark btn-block">Register</button>
          </form>
        </div>
        <div>
          Or you can also register with
        </div>

        <div class="container center auth">
          <div class="card">
              <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
                <i class="fab fa-google"></i>
                Sign Up with Google
              </a>
            </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>